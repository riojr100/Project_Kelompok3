<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer border layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Border color -->
            <corners android:radius="10dp" />  <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Inner image layer -->
    <item android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color of inner image -->
            <corners android:radius="100dp" />
        </shape>
    </item>
</layer-list>
